---
import RssIcon from "~icons/mdi/rss-box";
import NewTabIcon from "./NewTabIcon.astro";

export type Props = {
  name: string;
};

const { name } = Astro.props;
---

<div class="flex">
  <h1>{name}</h1>
  <div class="my-auto ml-2">
    <NewTabIcon href="/rss.xml" description="Click to show RSS feed">
      <RssIcon />
    </NewTabIcon>
  </div>
</div>
