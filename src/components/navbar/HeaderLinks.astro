---
import cn from "../../utils/cn.js";

export interface Props {
  ulClass?: string;
  liClass?: string;
  activeClass?: string;
}

const { ulClass = "", liClass = "", activeClass = "" } = Astro.props;

const navbar = [
  {
    title: "Home",
    url: "/",
  },
  {
    title: "About",
    url: "/about",
  },
  {
    title: "Contact",
    url: "/contact",
  },
];
---

<ul class={ulClass}>
  {
    navbar.map(item => (
      <li class={cn(liClass, item.url === Astro.url.pathname && activeClass)}>
        <a href={item.url}>{item.title}</a>
      </li>
    ))
  }
</ul>
