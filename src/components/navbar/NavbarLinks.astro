---
import cn from "../../utils/cn.js";

type Props = {
  ulClass?: string;
  liClass?: string;
  activeClass?: string;
};

const { ulClass = "", liClass = "", activeClass = "" } = Astro.props as Props;

const navbar = [
  {
    title: "Home",
    url: "/",
  },
  {
    title: "About",
    url: "/about",
  },
  {
    title: "Contact",
    url: "/contact",
  },
];
---

<ul class={ulClass}>
  {
    navbar.map(item => (
      <li>
        <a
          class={cn(liClass, item.url === Astro.url.pathname && activeClass)}
          href={item.url}
        >
          {item.title}
        </a>
      </li>
    ))
  }
</ul>
