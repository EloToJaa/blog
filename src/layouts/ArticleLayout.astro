---
import MainLayout from "./MainLayout.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<MainLayout title={title}>
  <article
    class="prose lg:prose-xl prose-h1:mb-4 prose-h2:mt-4 prose-h2:mb-2 dark:prose-invert"
  >
    <slot />
  </article>
</MainLayout>
