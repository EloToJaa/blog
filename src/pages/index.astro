---
import Hr from "@components/common/Hr.astro";
import ReadMore from "@components/common/ReadMore.astro";
import AboutMe from "@components/posts/AboutMe.astro";
import PostCards from "@components/posts/PostCards.astro";
import BlogCollection from "@utils/blog";
import MainLayout from "../layouts/MainLayout.astro";

const blogCollection = new BlogCollection();
await blogCollection.getCollection();
const recentPosts = blogCollection.getRecentPosts(4);
---

<MainLayout title="Home">
	<AboutMe />
	<Hr noPadding />

	<PostCards posts={recentPosts} sectionName="recent" header="Recent">
		<ReadMore href="/posts">All posts</ReadMore>
	</PostCards>
</MainLayout>
